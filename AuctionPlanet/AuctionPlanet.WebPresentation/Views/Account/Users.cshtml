@model IEnumerable<AuctionPlanet.DataAccess.Identity.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<table class="table">
    <tr>
        <th>
            User name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Created lots", "CreatedLots", "Lot", new { userName = item.UserName }, null) |
            @Html.ActionLink("Bought lots", "BoughtLots", "Lot", new { userName = item.UserName }, null) |
            @Html.ActionLink("Currently held lots", "CurrentlyHeldLots", "Lot", new { userName = item.UserName }, null)
            @*@if (!string.Equals(User.Identity.Name, item.UserName))
            {
                @(item.BanFlag ? Html.ActionLink("Unblock", "UnblockUser", new { id = item.Id }) : Html.ActionLink("Block", "BlockUser", new { id = item.Id }))
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
            }*@
        </td>
    </tr>
}

</table>
